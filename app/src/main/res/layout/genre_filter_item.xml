<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/spacing_9x"
    android:layout_height="@dimen/spacing_8.75x"
    android:layout_marginHorizontal="@dimen/spacing_0.25x"
    android:layout_marginBottom="@dimen/spacing_1x">

    <ImageView
        android:id="@+id/genreFilterIcon"
        android:layout_width="@dimen/spacing_4.5x"
        android:layout_height="@dimen/spacing_4.5x"
        android:layout_marginTop="@dimen/spacing_0.5x"
        android:src="@drawable/ic_adventure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genreFilterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genreFilterIcon"
        tools:text="Adventure" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="@dimen/spacing_2x"
        android:layout_height="@dimen/spacing_2x"
        android:layout_marginEnd="@dimen/spacing_1.75x"
        android:src="@drawable/ic_checkmark"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>