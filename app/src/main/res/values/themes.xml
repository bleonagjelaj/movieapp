<resources>
    <!-- Base application theme. -->

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/blue_red_gradient</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/maroon</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MovieRating" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/dull_orange</item>
        <item name="backgroundSplit">@drawable/ic_star_rate_empty</item>
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>
</resources>