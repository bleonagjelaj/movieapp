<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MovieRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="FilterSpinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/white</item>
        <item name="android:foreground">@drawable/rounded_outlined_transparent_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>